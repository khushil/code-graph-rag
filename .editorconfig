# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML/YML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Feature files (Gherkin)
[*.feature]
indent_size = 2